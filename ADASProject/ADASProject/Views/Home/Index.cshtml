@model IndexModel
<!DOCTYPE HTML>
<html>
<head>
    <title>Home</title>
    <link href="css/bootstrap.css" rel='stylesheet' type='text/css' />
    <script type='text/javascript' src="js/jquery-1.11.1.min.js"></script>
    <link href="css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Gretong Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Playfair+Display:400,700,900' rel='stylesheet' type='text/css'>
    <link href="css/megamenu.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="js/megamenu.js"></script>
    <script>$(document).ready(function(){$(".megamenu").megamenu();});</script>
    <script src="js/menu_jquery.js"></script>
    <script src="js/simpleCart.min.js"></script>
</head>
<body>
    <div class="header_bg">
        <div class="container">
            <div class="header">
                <div class="head-t">
                   

                    <div class="header_right">
                        
                        <div class="clearfix"> </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>

                <ul class="megamenu skyblue">
                    <li class="active grid"><a class="color1" asp-action="Index">Home</a></li>
                    <li class="active grid"><a class="color1" asp-action="Catalog">Catalog</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="arriv">
        <div class="container">
            <div class="arriv-top">
                <div class="col-md-6 arriv-left">
                    <img src="~/images/Телевизор.jpg" class="img-responsive" alt="">
                    <div class="arriv-info">
                        <h1 style="color:white">TV's</h1>
                        <p>Top TV's of our shop</p>
                        <div class="crt-btn">
                            <a asp-controller="Home" asp-action="Catalog">SHOP NOW</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 arriv-right">
                    <img src="~/images/Айфон.jpg" class="img-responsive" alt="">
                    <div class="arriv-info">
                        <h1 style="color:white">Phones</h1>
                        <p>Find your new gadget!</p>
                        <div class="crt-btn">
                            <a asp-controller="Home" asp-action="Catalog">SHOP NOW</a>
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="arriv-bottm">
                <div class="col-md-8 arriv-left1">
                    <img src="~/images/Ноутбук.jpg" class="img-responsive" alt="">
                    <div class="arriv-info1">
                        <h1 style="color:white">Laptops</h1>
                        <p>Loof for the newest laptops</p>
                        <div class="crt-btn">
                            <a asp-controller="Home" asp-action="Catalog">SHOP NOW</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 arriv-right1">
                    <img src="~/images/Телевизор.jpg" class="img-responsive" alt="">
                    <div class="arriv-info2">
                        <a asp-controller="Home" asp-action="Catalog"><h1 style="color:white">Go to catalog<i class="ars"></i></h1></a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
    
    <div class="special">
        <div class="container">
            <h3>New Arrivals</h3>
            <div class="clearfix"> </div>
            <div class="specia-top">
                <ul class="grid_2">
                    @for (int i = 0; i < 4 && i < Model.First4Products.Length; i++)
                    {
                        var base64 = Convert.ToBase64String(Model.First4Products[i].Image);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <li>
                            <a asp-controller="Product" asp-action="Get/@Model.First4Products[i].Id"><img src="@imgSrc" style="width:1000px" class="img-responsive" alt=""></a>
                            <div class="special-info grid_1 simpleCart_shelfItem">
                                <h5>@Model.First4Products[i].Name</h5>
                                <div class="item_add"><span class="item_price"><h6>Price: @Model.First4Products[i].Price</h6></span></div>
                                <div class="item_add"><span class="item_price"><a style="background-color:grey">add to cart</a></span></div>
                            </div>
                        </li>
                    }

           
                    <div class="clearfix"> </div>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>