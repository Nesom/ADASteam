@model CatalogModel

<!DOCTYPE HTML>
<html>
<head>
    <title>ADAS-shop</title>

    <style>
        .float-input {
            float: left
        }
    </style>

    <style>
        .b {
            width: 80px;
            height: 30px;
            border-radius: 3px;
        }

        .a {
            text-decoration: none;
            outline: none;
            display: inline-block;
            width: 140px;
            height: 45px;
            line-height: 45px;
            border-radius: 45px;
            margin: 10px 20px;
            font-family: 'Montserrat', sans-serif;
            font-size: 11px;
            text-transform: uppercase;
            text-align: center;
            letter-spacing: 3px;
            font-weight: 600;
            color: #524f4e;
            background: white;
            box-shadow: 0 8px 15px rgba(0,0,0,.1);
            transition: .3s;
        }

            .a:hover {
                background: #A0A0A0;
                box-shadow: 0 15px 20px #AFAFAF;
                color: white;
                transform: translateY(-7px);
            }
    </style>

</head>
<body>
    <div class="top_bg">
        
    </div>
    <div class="header_bg">
        <div class="container">
            <div class="header">
                <div class="head-t">

                    <div class="header_right">
                        <div class="clearfix"> </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <ul class="megamenu skyblue">
                    <li class="active grid"><a class="color1" asp-action="Index">Home</a></li>
                    <li class="active grid"><a class="color1" asp-action="Catalog">Catalog</a></li>
                    </ul>
            </div>

            <div class="container">
                <div class="women_main">
                    <div class="col-md-3 s-d">
                        <div class="w_sidebar">
                            <section class="sky-form">
                                <h4>categories</h4>
                                <form asp-controller="Home" asp-action="Catalog" method="get">
                                    <div class="row1 scroll-pane">
                                        <div class="col col-4">
                                            @foreach (var check in CatalogModel.TypeToNameDict)
                                            {
                                                    <label><button class="a" name="CategoryName" value="@check.Key" asp-controller="Home" asp-action="Catalog">@check.Value</button></label>
                                            }
                                        </div>
                                    </div>
                                </form>
                                
                            </section>
                            <form asp-controller="Home" asp-action="Catalog" method="get">
                                <section class="sky-form">
                                    <h4>Filters</h4>
                                    <div class="row1 scroll-pane" style="height:auto">
                                        <div class="col col-4">
                                            @for (int i = 0; i < Model.StandartValuesInfo.Types.Length; i++)
                                            {
                                                @switch (Model.StandartValuesInfo.Types[i].Name)
                                                {
                                                    case "Double":
                                                        {
                                                            <p>@Model.StandartValuesInfo.Descriptions[i]: </p><input class="float-input, b" type="number"  step="0.1" asp-for="StandartValuesInfo.FromValues[i]" /><input class="b" type="number" step="0.1" asp-for="StandartValuesInfo.ToValues[i]" />;
                                                            break;
                                                        }

                                                    case "Int32":
                                                        {
                                                            <p>@Model.StandartValuesInfo.Descriptions[i]: </p><input class="float-input, b" type="number"  asp-for="StandartValuesInfo.FromValues[i]" /><input class="b" type="number" asp-for="StandartValuesInfo.ToValues[i]" />;
                                                            break;
                                                        }
                                                    default:
                                                        {
                                                            <p>@Model.StandartValuesInfo.Descriptions[i]: </p><input class="float-input, b" type="text" asp-for="StandartValuesInfo.FromValues[i]" /><input class="b" type="text" asp-for="StandartValuesInfo.ToValues[i]" />;
                                                            break;
                                                        }
                                                }
                                            }
                                            <br />
                                            @for (int i = 0; i < Model.CustomValuesInfo.Types.Length; i++)
                                            {
                                                @switch (Model.CustomValuesInfo.Types[i].Name)
                                                {
                                                    case "Double":
                                                        {
                                                            <p>@Model.CustomValuesInfo.Descriptions[i]: </p><input class="float-input, b" type="number" step="0.1" asp-for="CustomValuesInfo.FromValues[i]" /><input class="b" type="number" step="0.1" asp-for="CustomValuesInfo.ToValues[i]" />;
                                                            break;
                                                        }

                                                    case "Int32":
                                                        {
                                                            <p>@Model.CustomValuesInfo.Descriptions[i]: </p><input class="float-input, b" type="number" asp-for="CustomValuesInfo.FromValues[i]" /><input class="b" type="number" asp-for="CustomValuesInfo.ToValues[i]" />;
                                                            break;
                                                        }
                                                    default:
                                                        {
                                                            <p>@Model.CustomValuesInfo.Descriptions[i]: </p><input class="float-input, b" type="text" asp-for="CustomValuesInfo.FromValues[i]" /><input class="b" type="text" asp-for="CustomValuesInfo.ToValues[i]" />;
                                                            break;
                                                        }
                                                }
                                            }
                                            <input type="text" value="@Model.CategoryName" asp-for="CategoryName" hidden />
                                            <br /><button class="a" style="margin-left:10px" asp-controller="Home" asp-action="Catalog">Submit</button>
                                        </div>
                                    </div>
                                </section>
                                <section class="sky-form">
                                    <h4>Sort</h4>
                                    <div class="row1 scroll-pane">
                                        <div class="col col-4">
                                            @if (Model.SortedBy == null)
                                            {
                                                <label><input type="radio" name="SortedBy" checked />Not sorted</label>
                                            }
                                            else
                                            {
                                                <label><input type="radio" name="SortedBy" />Not sorted</label>
                                            }
                                            @if (Model.SortedBy == "Price")
                                            {
                                                <label><input asp-for="SortedBy" type="radio" name="SortedBy" value="Price" checked />Sorted by price</label>
                                            }
                                            else
                                            {
                                                <label><input asp-for="SortedBy" type="radio" name="SortedBy" value="Price" />Sorted by price</label>
                                            }
                                            @if (Model.SortedBy == "Rating")
                                            {
                                                <label><input asp-for="SortedBy" type="radio" name="SortedBy" value="Rating" checked />Sorted by rating</label>
                                            }
                                            else
                                            {
                                                <label><input asp-for="SortedBy" type="radio" name="SortedBy" value="Rating"/>Sorted by rating</label>
                                            }

                                            <br />
                                            <label><input asp-for="SortedByDescending" type="checkbox" />Sort by descending</label>
                                            <button class="a" style="margin-left:10px; vertical-align:bottom" asp-controller="Home" asp-action="Catalog">Submit</button>
                                        </div>
                                    </div>
                                </section>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-9 w_content">
                        <div class="women">
                            <a href="#"><h4>Result - <span>@Model.Count items</span> </h4></a>
                            <div class="clearfix"></div>
                        </div>

                        @foreach (var category in Model.Products.GroupBy(pr => pr.TableName).Select(group => group.ToArray()))
                        {
                            for (int i = 0; i < category.Length;)
                            {
                            <div class="grids_of_4">
                                @for(int j = i; j < i + 4 && j < category.Length; j++)
                                {
                                    var base64 = Convert.ToBase64String(category[j].Image);
                                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                                    <div class="grid1_of_4">
                                        <div class="content_box">
                                            <a asp-controller="Product" asp-action="Get/@category[j].Id">
                                                <img src="@imgSrc" class="img-responsive" alt="" />
                                            </a>
                                            <h4>@category[j].Name</h4>
                                            <p>@ADASProject.Models.CatalogModel.TypeToNameDict[ModelHelper.GetCategoryName(category[j].TableName)]</p>
                                            <div class="grid_1 simpleCart_shelfItem">

                                                <div class="item_add"><span class="item_price"><h6>Price: @category[j].Price</h6></span></div>
                                                <div class="item_add" ><span class="item_price" ><a asp-controller="Order" asp-action="Buy/@category[j].Id" style="background-color:grey">add to cart</a></span></div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @{i+=4;}
                            </div>
                            }
                            <div class="clearfix"></div>
                            <br />
                        }
                    </div>
                    <div class="clearfix"></div>

                    <!-- end content -->
                </div>
            </div>          
        </div>
    </div>
</body>
</html>



