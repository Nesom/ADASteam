@model RegisterModel

<h2 style="position:absolute; top:150px; left:180px">Register</h2>


<div class="registration_form" style="position:absolute; top:220px; left:180px"> 
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div >
            <label asp-for="Email">Enter your Email</label>
                <input style="width:300px" asp-for="Email" placeholder="first name:" type="text" tabindex="1" required>            
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Type your password</label>
                <input asp-for="Password" placeholder="password" type="password" tabindex="4" required>           
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label>
                <input asp-for="ConfirmPassword" placeholder="retype password" type="password" tabindex="4" required>
            
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Submit" id="register-submit">
        </div>
    </form>
 
</div>
